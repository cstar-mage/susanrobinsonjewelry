<?xml version="1.0"?>
<config>
    <modules>
        <Ideal_Diamondsearch>
            <version>0.3.8</version>
        </Ideal_Diamondsearch>
    </modules>
    <frontend>
        <routers>
            <diamondsearch>
                <use>standard</use>
                <args>
                    <module>Ideal_Diamondsearch</module>
                    <frontName>diamondsearch</frontName>
                </args>
            </diamondsearch>
        </routers>
        <layout>
            <updates>
                <diamondsearch>
                    <file>diamondsearch.xml</file>
                </diamondsearch>
            </updates>
        </layout>
    </frontend>
	<admin>
	    <routers>
	        <adminhtml>
	            <args>
	                <modules>
	                    <diamondsearch after="Mage_Adminhtml">Ideal_Diamondsearch_Adminhtml</diamondsearch>
	                </modules>
	            </args>
	        </adminhtml>
	    </routers>
	</admin>
    <adminhtml>
		<menu>
			<jewelryshare module="diamondsearch">
				<title>Jewelrslink</title>
				<sort_order>30</sort_order>               
				<children>
					<diamond_search_settings module="diamondsearch">
						<title>Diamond Search Settings</title>
						<sort_order>100</sort_order>
						<action>adminhtml/diamondsearch/settings</action>
					</diamond_search_settings>
				</children>
			</jewelryshare>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<jewelryshare module="diamondsearch">
							<title>Jewelerslink</title>
							<sort_order>30</sort_order>  
							<children>
								<diamond_search_settings module="diamondsearch">
									<title>Diamond Search Settings</title>
									<sort_order>100</sort_order>
								</diamond_search_settings>
							</children>
						</jewelryshare>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<diamondsearch>
					<file>diamondsearch.xml</file>
				</diamondsearch>
			</updates>
		</layout>
    </adminhtml>
    <global>
		<events>
            <controller_front_init_routers>
                <observers>
                    <diamondsearch>
                        <class>Ideal_Diamondsearch_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </diamondsearch>
                </observers>
            </controller_front_init_routers>
        </events>
        
        <models>
            <diamondsearch>
                <class>Ideal_Diamondsearch_Model</class>
                <resourceModel>diamondsearch_mysql4</resourceModel>
            </diamondsearch>
            <diamondsearch_mysql4>
                <class>Ideal_Diamondsearch_Model_Mysql4</class>
                <entities>
                    <diamondsearch>
                        <table>uploadtool_diamonds_inventory</table>
                    </diamondsearch>
                </entities>
            </diamondsearch_mysql4>
        </models>
        <resources>
            <diamondsearch_setup>
                <setup>
                    <module>Ideal_Diamondsearch</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </diamondsearch_setup>
            <diamondsearch_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </diamondsearch_write>
            <diamondsearch_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </diamondsearch_read>
        </resources>
        <blocks>
            <diamondsearch>
                <class>Ideal_Diamondsearch_Block</class>
            </diamondsearch>
        </blocks>
        <helpers>
            <diamondsearch>
                <class>Ideal_Diamondsearch_Helper</class>
            </diamondsearch>
        </helpers>
